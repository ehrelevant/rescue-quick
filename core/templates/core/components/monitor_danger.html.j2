<div class="bg-white shadow-md p-4 lg:p-6 border-1 border-red-light rounded-md column-2 w-full">
    <div class="grid grid-cols-5 gap-2 mb-2 lg:mb-4">
        <div class="flex gap-2 col-span-5 md:col-span-2">
            <div class="aspect-square h-[1.5rem] lg:h-[2rem] w-auto animate-pulse bg-red-light-50 rounded-full flex items-center justify-center">
                <div class="w-[50%] h-[50%] bg-red rounded-full"></div>
            </div>
            <div class="flex flex-row w-100 md:flex-col items-center md:items-start">
                <span class="text-xs lg:text-base font-medium">{{ camera_name }}</span>
                <div class="flex-grow"></div>
                <span class="text-xs">{{ date }}</span>
            </div>
        </div>
        <div class="col-span-5 md:col-span-3 flex flex-col md:text-right">
            <span class="hidden md:block text-xs/3">Located at</span>
            <span class="text-base lg:text-lg/5 font-bold">{{ location }}</span>
        </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
        <div class="p-4 bg-gray-50 border-1 border-gray-200 rounded rounded-md">
            <div class="flex items-center gap-2 mb-2">
                <div class="p-1 bg-red rounded-full flex items-center aspect-square h-fit w-auto justify-center">
                    <span class="bi--person-fill size-2 md:size-3"></span>
                </div>
                <span class="text-sm font-bold">People & Pets</span>
            </div>
            <div class="flex flex-row tooltip tooltip-bottom"
                 data-tip="Rescue them quickly!">
                <div class="flex flex-grow flex-col items-start">
                    <span class="text-sm lg:text-base font-medium text-gray-500">People</span>
                    <span class="text-xl lg:text-3xl font-bold">{{ num_people }}</span>
                </div>
                <div class="flex flex-grow flex-col">
                    <span class="text-sm lg:text-base font-medium text-gray-500">Cats</span>
                    <span class="text-xl lg:text-3xl font-bold">{{ num_cats }}</span>
                </div>
                <div class="flex flex-grow flex-col">
                    <span class="text-sm lg:text-base font-medium text-gray-500">Dogs</span>
                    <span class="text-xl lg:text-3xl font-bold">{{ num_dogs }}</span>
                </div>
            </div>
        </div>
        <div class="p-4 bg-gray-50 border-1 border-gray-200 rounded rounded-md">
            <div class="flex items-center gap-2 mb-2">
                <div class="p-1 bg-red rounded-full flex items-center aspect-square h-fit w-auto justify-center">
                    <span class="ri--flood-fill size-2 md:size-3"></span>
                </div>
                <span class="text-sm font-bold">Flood Level</span>
            </div>
            <div class="flex flex-col gap-2">
                <div class="flex items-end gap-2">
                    <span class="text-xl lg:text-3xl font-bold">{{ flood_level }}</span>
                    <span class="text-sm lg:text-base font-medium text-gray-500">Meters</span>
                </div>
                <div class="tooltip tooltip-bottom"
                     data-tip="Caution Level: {{ max_flood_level }} meters">
                    <progress class="progress progress-error w-full"
                              value="{{ flood_level }}"
                              max="{{ max_flood_level }}"
                              style="color: var(--color-red)"></progress>
                </div>
            </div>
        </div>
    </div>
</div>
