<div class="bg-gray-light border-md shadow-md p-6 rounded-md w-full flex flex-col gap-2">
    <div class="flex gap-2 items-center">
        <div class="aspect-square h-[2rem] w-auto animate-pulse bg-red-light-50 rounded-full flex items-center justify-center">
            <div class="w-[50%] h-[50%] bg-red rounded-full"></div>
        </div>
        <div class="flex flex-row gap-2">
            <span class="font-medium">{{ camera_name }}</span>
            <span class="font-medium text-gray-500">{{ time_elapsed }}</span>
        </div>
    </div>
    <span class="text-lg lg:text-2xl  font-bold">{{ location }}</span>
    <div class="grid grid-cols-2 gap-2">
        <button class="btn btn-outline btn-disabled hover:shadow-md w-full tooltip tooltip-right"
                data-tip="Rescue is on their way!">Rescue Deployed</button>
        <button class="btn bg-red text-white border-red hover:shadow-md w-full tooltip tooltip-left"
                data-tip="Only press when already safe!">Mark as Safe</button>
    </div>
</div>
