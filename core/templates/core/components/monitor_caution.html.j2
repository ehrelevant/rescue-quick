<div class="bg-white shadow-md p-6 rounded-md column-2 w-full">
    <div class="grid grid-cols-5 gap-2 mb-4">
        <div class="flex gap-2 col-span-2">
            <div class="aspect-square h-[2rem] w-auto animate-pulse bg-yellow-light rounded-full flex items-center justify-center">
                <div class="w-[50%] h-[50%] bg-yellow rounded-full"></div>
            </div>
            <div class="flex flex-col">
                <span class="font-medium">{{ camera_name }}</span>
                <span class="text-xs">{{ date }}</span>
            </div>
        </div>
        <div class="col-span-3 flex flex-col text-right">
            <span class="text-xs/3">Located at</span>
            <span class="text-lg/5 font-bold">{{ location }}</span>
        </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
        <div class="p-4 bg-gray-50 border-1 border-gray-200 rounded rounded-md">
            <div class="flex items-center gap-2 mb-2">
                <div class="p-1 bg-yellow rounded-full flex items-center aspect-square h-fit w-auto justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24"
                         fill="white"
                         class="size-3">
                        <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                    </svg>
                </div>
                <span class="font-bold">People & Pets</span>
            </div>
            <div class="flex flex-row tooltip tooltip-bottom"
                 data-tip="Currently not in critical level.">
                <div class="flex flex-grow flex-col items-start">
                    <span class="font-medium text-gray-500">People</span>
                    <span class="text-3xl font-bold text-gray-300">0</span>
                </div>
                <div class="flex flex-grow flex-col">
                    <span class="font-medium text-gray-500">Cats</span>
                    <span class="text-3xl font-bold text-gray-300">0</span>
                </div>
                <div class="flex flex-grow flex-col">
                    <span class="font-medium text-gray-500">Dogs</span>
                    <span class="text-3xl font-bold text-gray-300">0</span>
                </div>
            </div>
        </div>
        <div class="p-4 bg-gray-50 border-1 border-gray-200 rounded rounded-md">
            <div class="flex items-center gap-2 mb-2">
                <div class="p-1 bg-yellow rounded-full flex items-center aspect-square h-fit w-auto justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24"
                         fill="white"
                         class="size-3">
                        <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                    </svg>
                </div>
                <span class="font-bold">Flood Level</span>
            </div>
            <div class="flex flex-col gap-2">
                <div class="flex items-end gap-2">
                    <span class="text-3xl font-bold">{{ flood_level }}</span>
                    <span class="font-medium text-gray-500">Meters</span>
                </div>
                <div class="tooltip tooltip-bottom"
                     data-tip="Caution Level: {{ max_flood_level }} meters">
                    <progress class="progress progress-error w-full"
                              value="{{ flood_level }}"
                              max="{{ max_flood_level }}"
                              style="color: var(--color-yellow)"></progress>
                </div>
            </div>
        </div>
    </div>
</div>
