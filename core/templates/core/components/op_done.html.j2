<div class="bg-gray-light border-md shadow-md p-6 rounded-md w-full flex flex-col gap-2">
    <div class="flex gap-2 items-center">
        <div class="flex flex-row gap-2">
            <span class="font-medium">{{ camera_name }}</span>
            <span class="font-medium text-gray-500">{{ date }}</span>
        </div>
    </div>
    <span class="text-lg lg:text-2xl  font-bold">{{ location }}</span>
    <div class="grid grid-cols-2 gap-2">
        <div class="tooltip tooltip-right">
            <div class="tooltip-content flex flex-col gap-2 p-2">
                <div class="flex items-center gap-2">
                    <div class="p-1 bg-red rounded-full flex items-center aspect-square h-fit w-auto justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 24 24"
                             fill="white"
                             class="size-3">
                            <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <span class="font-bold">
                        {% if num_people != 0 %}
                            {% if num_cats or num_dogs %}
                                {{ num_people }} people, {{ num_cats }} cats, {{ num_dogs }} dogs
                            {% else %}
                                {{ num_people }} people
                            {% endif %}
                        {% elif num_cats or num_dogs %}
                            {{ num_cats }} cats, {{ num_dogs }} dogs
                        {% endif %}
                    </span>
                </div>
                <div class="flex items-center gap-2">
                    <div class="p-1 bg-red rounded-full flex items-center aspect-square h-fit w-auto justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="size-3" viewBox="0 0 48 48">
                            <g fill="none" stroke="#fff" stroke-linejoin="round" stroke-width="4">
                            <path stroke-linecap="round" d="M24 44c8.284 0 15-6.716 15-15C39 15 24 4 24 4S9 15 9 29c0 8.284 6.716 15 15 15" clip-rule="evenodd" />
                            <path fill="#fff" d="M9 29c0 8.284 6.716 15 15 15s15-6.716 15-15c0 0-9 3-15 0S9 29 9 29Z" />
                            </g>
                        </svg>
                    </div>
                    <span class="font-bold">{{ flood_level }} meters</span>
                </div>
            </div>
            <button class="btn btn-outline btn-disabled hover:shadow-md w-full tooltip tooltip-right"
                    data-tip="Rescue is on their way!">Rescue Deployed</button>
        </div>
        <div class="tooltip tooltip-left" data-tip="Marked Safe @ 11:00 PM">
            <button class="btn btn-disabled hover:shadow-md w-full tooltip tooltip-left">Marked Safe</button>
        </div>
    </div>
</div>
