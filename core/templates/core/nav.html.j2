{% load static %}
<div class="h-[64px] lg:[10vh] w-full p-3 flex flex-row gap-4 justify-center lg:justify-start items-center border-b-1 border-gray-200">
    <img alt="RQ Logo"
         class="h-full hidden lg:inline-block"
         src="{% static 'core/img/rq-logo.png' %}">
    <img alt="RQ Logo"
         class="h-[75%] lg:hidden"
         src="{% static 'core/img/rq.svg' %}">
    <a class="hidden lg:inline-block" href="/">
        {% if selected == 'dashboard' %}
            <button class="btn btn-sm pt-4 pb-4 rounded-lg flex items-center gap-4 btn-active">
                <span class="ion--home size-4"></span>
                Dashboard
            </button>
        {% else %}
            <button class="btn btn-sm pt-4 pb-4 rounded-lg flex items-center gap-4">
                <span class="ion--home size-4"></span>
                Dashboard
            </button>
        {% endif %}
    </a>
    <a class="hidden lg:inline-block" href="/feed/1/">
        {% if selected == 'feed' %}
            <button class="btn btn-sm pt-4 pb-4 rounded-lg flex items-center gap-4 btn-active">
                <span class="fluent--video-32-filled size-4"></span>
                Live Feed
            </button>
        {% else %}
            <button class="btn btn-sm pt-4 pb-4 rounded-lg flex items-center gap-4">
                <span class="fluent--video-32-filled size-4"></span>
                Live Feed
            </button>
        {% endif %}
    </a>
    <a class="hidden lg:inline-block">
        {% if selected == 'monitors' %}
            <button class="btn btn-sm pt-4 pb-4 rounded-lg flex items-center gap-4 btn-active">
                <span class="mdi--tools size-4"></span>
                Configure Monitors
            </button>
        {% else %}
            <button class="btn btn-sm pt-4 pb-4 rounded-lg flex items-center gap-4">
                <span class="mdi--tools size-4"></span>
                Configure Monitors
            </button>
        {% endif %}
    </a>
</div>
